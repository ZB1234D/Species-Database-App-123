{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Species",
  "type": "object",
  "properties": {

    "id": {
      "type": "string",
      "format": "uuid",
      "description": "unique stable id for this species across versions"
    },

    "sr_no": {
      "type": "integer",
      "minimum": 1,
      "description": "serial unique number for the species"
    },

    "language": {
      "type": "string",
      "enum": ["en", "tet"],
      "description": "language of this row (english or tetum)"
    },

    "scientific_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 200,
      "description": "scientific name"
    },

    "common_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "English common name by people or the community"
    },

    "etymology": {
      "type": "string",
      "maxLength": 1000,
      "description": "species name explaination from the origin"
    },

    "habitat": {
      "type": "string",
      "maxLength": 500,
      "description": "species growth environment"
    },

    "phenology": {
      "type": "string",
      "maxLength": 1000,
      "description": "period of time where the species grow"
    },

    "identification_characters": {
      "type": "string",
      "maxLength": 2000,
      "description": "identification characters of the species"
    },

    "leaf_type": {
      "type": "string",
      "enum": [
        "Simple",
        "Pinnately compound (single)",
        "Pinnately compound (double)",
        "Pinnately compound (triple)",
        "Palmately compound"
      ]
    },

    "fruit_type": {
      "type": "string",
      "enum": [
        "Drupe",
        "Capsule",
        "Follicle",
        "Pod"
      ]
    },

    "seed_germination": {
      "type": "string",
      "maxLength": 2000,
      "description": "seed germination process notes"
    },

    "pest": {
      "type": "string",
      "maxLength": 2000,
      "description": "pest the affect the species"
    },

    "image_urls": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "Images of the species"
    },

    "videos": {
      "type": "array",
      "description": "adding videos",
      "items": {
        "type": "object",
        "properties": {

          "type": {
            "type": "string",
            "description": "different types of video"
          },

          "url": {
            "type": "string",
            "format": "uri",
            "description": "video url"
          },

          "language": {
            "type": "string",
            "enum": ["en", "tet"],
            "description": "language of this video"
          }

        },
        "required": ["type", "url"]
        
      }
    }

  },
  "required": [
    
    "sr_no",
    "language",
    "scientific_name",
    "common_name",
    "leaf_type",
    "fruit_type"
  ]

}
